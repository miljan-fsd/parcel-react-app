{
  "name": "parcel-react-app",
  "version": "1.0.0",
  "description": "Create React apps using Parcel as build tool",
  "main": "index.js",
  "scripts": {
    "start":
      "cross-env NODE_ENV=development parcel ./public/index.html -p 3000",
    "build":
      "cross-env NODE_ENV=production parcel build ./public/index.html -d build --public-url ./",
    "format:js": "prettier --write './src/**/*.{js,jsx,json,md}'",
    "format:style": "prettier-stylelint --write './src/**/*.{css,scss}'",
    "format": "npm run format:js && npm run format:style",
    "lint:style":
      "stylelint './src/**/*.{css,scss}' --formatter verbose; exit 0",
    "lint:js": "eslint './src/**/*.{js,jsx,json,md}'; exit 0",
    "lint": "npm run lint:style && npm run lint:js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miljan-fsd/parcel-react-app.git"
  },
  "keywords": ["Parcel", "React"],
  "author": "Miljan Djordjevic <miljan.fsd@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/miljan-fsd/parcel-react-app/issues"
  },
  "homepage": "https://github.com/miljan-fsd/parcel-react-app#readme",
  "dependencies": {
    "prop-types": "^15.6.0",
    "raf": "^3.4.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.1.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^5.1.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "eslint": "^4.16.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.7.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-markdown": "^1.0.0-beta.6",
    "eslint-plugin-react": "^7.6.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.1.4",
    "parcel-bundler": "^1.5.0",
    "parcel-plugin-eslint": "^1.0.3",
    "prettier-stylelint": "^0.4.2",
    "react-test-renderer": "^16.2.0",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-scss": "^2.2.0"
  },
  "jest": {
    "setupFiles": ["./test/jestSetup.js"],
    "collectCoverageFrom": ["src/**/*.{js,jsx}"],
    "snapshotSerializers": ["enzyme-to-json/serializer"],
    "moduleNameMapper": {
      "^.+\\.(css|scss|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$":
        "identity-obj-proxy"
    }
  }
}
